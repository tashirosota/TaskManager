<h1>DETAIL</h1>
   <% if @task.errors.any? %>
　<p><%= t('error.error1') %></p>
　<% end %>　
<p>

<div class="container">
  <table class="table table-bordered">
    <thead>
    <tr class="active">
      <th><%= t('view.taskname') %></th>
      <th><%= t('view.note') %></th>
      <th><%= t('view.priority') %></th>
      <th><%= t('view.statusId') %></th>
      <th><%= t('view.line') %></th>
      <th><%= t('view.createdAt') %></th>
      <th><%= t('view.labelId')+"1"%></th>
      <th><%= t('view.labelId')+"2"%></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= @task.title %></td>
      <td><%= @task.memo %></td>
      <td><%= @task.priority %></td>
      <td><%= @task.status %></td>
      <td><%= @task.line.strftime('%Y年%m月%d日 %H:%M') %></td>
      <td><%= @task.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
      <td><%= @task.label1 %></td>
      <td><%= @task.label2 %></td>
    </tr>
    </tbody>
  </table>
</div>
<%= link_to "EDIT", edit_task_path(id: @task.id) , class:"btn btn-success btn-sm active"%>
